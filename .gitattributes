########################################################
# 📄 Source Files — Normalize to LF line endings
########################################################
*.lua     text eol=lf
*.ps1     text eol=lf
*.psm1    text eol=lf
*.sh      text eol=lf
*.json    text eol=lf
*.md      text eol=lf

########################################################
# 🔒 Treat Logs, Binaries, and Caches as Binary
########################################################
*.log                binary
*.luac               binary
*.bak                binary
*.tmp                binary
*.cache              binary
*.manifest.json      binary

########################################################
# 📝 Generated Changelogs
########################################################
CHANGELOG.md         linguist-generated=true
what-new.md          linguist-generated=true

########################################################
# 🧠 IDE Metadata (ignore in language stats)
########################################################
.vscode/*            linguist-generated=true
.idea/*              linguist-generated=true
